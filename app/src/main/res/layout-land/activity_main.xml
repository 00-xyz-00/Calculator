<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#707070">

    <TextView
        android:id="@+id/user_input_textview"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_weight=".15"
        android:gravity="center|end"
        android:padding="@dimen/dimen_16dp"
        android:text="@string/zero_text"
        android:textColor="@color/appWhite"
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".85"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2">
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/open_parenthesis"
                android:layout_weight=".25"
                android:text="("
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/closing_parenthesis"
                android:layout_weight=".25"
                android:text=")"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/mc_button"
                android:layout_weight=".25"
                android:text="mc"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/mplus_button"
                android:layout_weight=".25"
                android:text="m+"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/mminus_button"
                android:layout_weight=".25"
                android:text="m-"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/mr_button"
                android:layout_weight=".25"
                android:text="mr"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ac_button"
                android:layout_weight=".25"
                android:text="AC"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/neg_pos_button"
                android:layout_weight=".25"
                android:text="+/-"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/modulus_button"
                android:layout_weight=".25"
                android:text="%"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonOrange"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/division_button"
                android:layout_weight=".25"
                android:text="&#247;"
                android:onClick="calcClick"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2">
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/second_button"
                android:layout_weight=".25"
                android:text="2"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/square_button"
                android:layout_weight=".25"
                android:text="@string/x_2"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/cube_button"
                android:layout_weight=".25"
                android:text="@string/x_3"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/xy_button"
                android:layout_weight=".25"
                android:text="@string/x_y"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/e_x_button"
                android:layout_weight=".25"
                android:text="@string/e_x"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ten_button"
                android:layout_weight=".25"
                android:text="@string/ten_x"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonLightGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/seven_button"
                android:layout_weight=".25"
                android:text="7"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonLightGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/eight_button"
                android:layout_weight=".25"
                android:text="8"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonLightGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/nine_button"
                android:layout_weight=".25"
                android:text="9"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonOrange"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/multiply_button"
                android:layout_weight=".25"
                android:text="X"
                android:onClick="calcClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2">
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/on_x_button"
                android:layout_weight=".25"
                android:text="1/x"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/square_root_button"
                android:layout_weight=".25"
                android:text="TODO"
                android:onClick="calcClick"/>

            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/cubic_root_button"
                android:layout_weight=".25"
                android:text="TODO"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/nth_root_button"
                android:layout_weight=".25"
                android:text="TODO"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ln_button"
                android:layout_weight=".25"
                android:text="ln"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/log10_button"
                android:layout_weight=".25"
                android:text="@string/log_10"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonLightGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/four_button"
                android:layout_weight=".25"
                android:text="4"
                android:onClick="calcClick"/>

            <Button
                android:id="@+id/five_button"
                style="@style/CalculatorButtonLightGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="5" />
            <Button
                style="@style/CalculatorButtonLightGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/six_button"
                android:layout_weight=".25"
                android:text="6"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonOrange"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/subtract_button"
                android:layout_weight=".25"
                android:text="-"
                android:onClick="calcClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2">
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/factorial_button"
                android:layout_weight=".25"
                android:text="x!"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/sin_button"
                android:layout_weight=".25"
                android:text="sin"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/cos_button"
                android:layout_weight=".25"
                android:text="cos"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tan_button"
                android:layout_weight=".25"
                android:text="tan"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/e_button"
                android:layout_weight=".25"
                android:text="e"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonGrey"
                android:background="#5A5A5A"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/ee_button"
                android:layout_weight=".25"
                android:text="EE"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonLightGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/one_button"
                android:layout_weight=".25"
                android:text="1"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonLightGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/two_button"
                android:layout_weight=".25"
                android:text="2"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonLightGrey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/three_button"
                android:layout_weight=".25"
                android:text="3"
                android:onClick="calcClick"/>
            <Button
                style="@style/CalculatorButtonOrange"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/add_button"
                android:layout_weight=".25"
                android:text="+"
                android:onClick="calcClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".2">

            <Button
                android:id="@+id/rad_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="#5A5A5A"
                android:onClick="calcClick"
                android:text="Rad" />

            <Button
                android:id="@+id/sinh_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="#5A5A5A"
                android:onClick="calcClick"
                android:text="sinh" />

            <Button
                android:id="@+id/cosh_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="#5A5A5A"
                android:onClick="calcClick"
                android:text="cosh" />

            <Button
                android:id="@+id/tanh_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="#5A5A5A"
                android:onClick="calcClick"
                android:text="tanh" />

            <Button
                android:id="@+id/pi_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="#5A5A5A"
                android:onClick="calcClick"
                android:text="π" />

            <Button
                android:id="@+id/rand_button"
                style="@style/CalculatorButtonGrey"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:background="#5A5A5A"
                android:onClick="calcClick"
                android:text="Rand" />

            <Button
                android:id="@+id/zero_button"
                style="@style/CalculatorButtonLightGrey"
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:onClick="calcClick"
                android:text="0" />

            <Button
                android:id="@+id/period_button"
                style="@style/CalculatorButtonLightGrey"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:onClick="calcClick"
                android:text="." />

            <Button
                style="@style/CalculatorButtonOrange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/equals_button"
                android:layout_weight=".25"
                android:text="="
                android:onClick="calcClick"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>