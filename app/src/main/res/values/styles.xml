<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#B88800</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CalculatorButtonGrey">
        <item name="android:background">#BF4E4E4E</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="CalculatorButtonLightGrey">
        <item name="android:background">#BE7F7D7D</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="CalculatorButtonOrange" parent="CalculatorButtonGrey">
        <item name="android:background">#FFA00E</item>
    </style>
</resources>